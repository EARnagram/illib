<div class="container">
<%= form_for(@comic) do |f| %>
  <% if @comic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comic.errors.count, "error") %> prohibited this comic from being saved:</h2>

      <ul>
      <% @comic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row show-comic-list">
      <div class="col-md-3">
        <div class="field form-comic-attributes-x">
          <%= f.label "Title: " %><br>
          <%= f.text_field :title %>
        </div>
        <div class="field form-comic-attributes-x">
          <%= f.label "Series: " %><br>
          <%= f.text_field :series %>
        </div>
        <div class="field form-comic-attributes-x">
          <%= f.label "Issue Number: " %><br>
          <%= f.text_field :issue_no %>
        </div>
        <div class="field form-comic-attributes-x">
          <%= f.label "Image URL: " %><br>
          <%= f.text_area :img_url %>
        </div>
      </div>
      <div class="col-md-3">
        <div class="field form-comic-attributes-x">
          <%= f.label "Creator: " %><br>
          <%= f.text_field :creator %>
        </div>
        <div class="field form-comic-attributes-x">
          <%= f.label "Author: " %><br>
          <%= f.text_field :author %>
        </div>
        <div class="field form-comic-attributes-x">
          <%= f.label "Publisher: " %><br>
          <%= f.text_field :publisher %>
        </div>
      </div>
      <div class="col-md-3">
        <div class="field form-comic-attributes-x">
          <%= f.label "Penciller: " %><br>
          <%= f.text_field :penciller %>
        </div>
        <div class="field form-comic-attributes-x">
          <%= f.label "Inker: " %><br>
          <%= f.text_field :inker %>
        </div>
        <div class="field form-comic-attributes-x">
          <%= f.label "Colorist: " %><br>
          <%= f.text_field :colorist %>
        </div>
      </div>
      <div class="col-md-3">
        <div class="field form-comic-attributes-x">
          <%= f.label "Letterer: " %><br>
          <%= f.text_field :letterist %>
        </div>
        <div class="field form-comic-attributes-x">
          <%= f.label "Publish Date: " %><br>
          <%= f.text_field :publish_date %>
        </div>
        <div class="field form-comic-attributes-x">
          <%= f.label "Print Number: " %><br>
          <%= f.text_field :print_num %>
        </div>
      </div>
    </div>

    <div class="actions btn">
      <%= f.submit %>
    </div>
    <%= link_to 'Back', "/users/#{ current_user.id }", class:"btn back-button-comic-form" %>
  </div>
<% end %>
</div>
