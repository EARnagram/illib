<% provide(:title, "Illib.#{ @user.username }") %>
<div class="container">
  <h1>Illib.<%= @user.username %></h1>
<table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Series</th>
        <th>Issue No.</th>
        <th>Creator</th>
        <th>Publisher</th>
        <th>Check-In Status</th>
      </tr>
    </thead>
    <tbody>
      <% @user.comics.each do |comic| %>
        <tr>
          <td><%= link_to comic.title, comic %></td>
          <td><%= link_to comic.series, comic %></td>
          <td><%= link_to "#{comic.issue_no}", comic %></td>
          <td><%= link_to comic.creator, comic %></td>
          <td><%= link_to comic.publisher, comic %></td>
          <td>
            <% if comic.loan %>
              <%=  link_to comic.checkin, "/checkin_check/#{comic.id}" %>
            <% else %>
              <%=  link_to "In", "/loan_check/#{comic.id}" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
</div>
